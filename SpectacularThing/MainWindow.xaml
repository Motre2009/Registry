<Window x:Class="SpectacularThing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spectacular Windows Customizer" Height="400" Width="450" Background="LightGray">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Menu animation speed (0-1000 ms):" FontWeight="Bold" Margin="0,0,0,5"/>
            <Slider x:Name="sliderMenuDelay" Minimum="0" Maximum="1000" Value="400" TickFrequency="50"
                    ValueChanged="SliderMenuDelay_ValueChanged" Margin="0,0,0,5"/>
            <Label x:Name="labelMenuDelay" Content="Current: 400 ms" Foreground="Blue" Margin="0,0,0,10"/>

            <Label Content="Context menu background color (RGB, e.g. 255 255 255):" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="textBoxMenuColor" Text="255 255 255" TextChanged="TextBoxMenuColor_TextChanged" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Red" Click="ButtonRed_Click" Margin="5" Background="LightCoral"/>
                <Button Content="Green" Click="ButtonGreen_Click" Margin="5" Background="LightGreen"/>
                <Button Content="Blue" Click="ButtonBlue_Click" Margin="5" Background="LightBlue"/>
            </StackPanel>

            <Label Content="Preview:" Margin="0,5,0,0"/>
            <Rectangle x:Name="previewRect" Width="100" Height="30" Fill="White" Stroke="Black" StrokeThickness="1" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                <Button Content="Apply Settings" Click="ButtonApply_Click" Margin="5" Padding="10,5" Background="LightGreen" FontWeight="Bold"/>
                <Button Content="Reset to Default" Click="ButtonReset_Click" Margin="5" Padding="10,5" Background="LightCoral" FontWeight="Bold"/>
            </StackPanel>

            <TextBlock Text="Note: Log out/in for MenuShowDelay. Press F5 on desktop for Menu color."
                       Margin="0,10,0,0" Foreground="Gray" FontSize="12" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
